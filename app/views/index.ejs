<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SINA US</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <center><h2><img style ="width:30%" src="/images/sinalogo.png">CHECK IN SYSTEM</h2></center>
    <hr>
    <div class = "container" style="margin-top:60px;">
    <center>
      <button class="btn btn-large btn-primary" style="margin-right:30px" onclick="popModal('#sign-up')">Sign Up</button><label> or </label><button class="btn btn-large btn-default" style="margin-left:30px" onclick="popModal('#sign-in')">Sign In</button>
    </center>
      
    </div>
    <!-- modal for sign up-->
    <div class="modal fade" id="sign-up" tabindex="-1">
      <div class="modal-dialog modal-custom">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <strong class="modal-title">SIGN UP</strong>
          </div>
          <form role="form" class="sign-up-form" action="/user/signup" method="post"> <!-- sign up form -->
            <div class="modal-body">
              <div class="row">
                <div class="form-group col-md-6">
                  <label class="sr-only" for="form-first-name">First Name</label>
                  <input name="firstname" type="text" class="form-control" id="form-first-name" placeholder="First Name">
                </div>
                <div class="form-group col-md-6">
                  <label class="sr-only" for="form-last-name">Last Name</label>
                  <input name="lastname" type="text" class="form-control" id="form-last-name" placeholder="Last Name">
                </div>
              </div>
              <div class="row">
                <div class="form-group col-md-12">
                  <label class="sr-only" for="form-email">Username</label>
                  <input name="username" type="username" class="form-control" id="form-email" placeholder="Username">
                </div>
              </div>
              <div class="row">
                <div class="form-group col-md-6">
                  <label class="sr-only" for="form-password">Password</label>
                  <input name="password" type="password" class="form-control" id="form-password" placeholder="Password">
                </div>
                <div class="form-group col-md-6">
                  <label class="sr-only" for="form-password-confirm">Verify Password</label>
                  <input name="password_confirm" type="password" class="form-control" id="form-password-confirm" placeholder="Verify Password">
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-cancel cancel-btn" data-dismiss="modal">CANCEL</button>
              <input type="submit" class="btn btn-primary submit-btn" value="Submit">
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- modal for sign in-->
    <div class="modal fade" id="sign-in" tabindex="-1">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <strong class="modal-title">SIGN IN</strong>
          </div>
          <form role="form" class="sign-in-form" action="/user/login" method="post"> <!-- sign in form -->
            <div class="modal-body">
              <div class="form-group">
                <label class="sr-only" for="form2-username">Username</label>
                <input name="username" type="text" class="form-control" id="form2-username" placeholder="Username">
              </div>
              <div class="form-group">
                <label class="sr-only" for="form2-password">Password</label>
                <input name="password" type="password" class="form-control" id="form2-password" placeholder="Password">
              </div>
            </div>
            <div class="modal-footer">
              <input type="submit" class="btn btn-primary btn-block" value="SIGN IN">
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.3.5/bootstrap-select.min.js"></script>
    <script type="text/javascript">
    function popModal(id) {
      $(id).modal()
    }

    $('.select-picker').selectpicker({showContent:false});


    !function () {
      var $top, $role, activeSelection;
      $top = $('.role-group');
      $role = $('#form-role');
      $top.selections = [];
      activeSelection = function(elem) {
        $top.selections.forEach(function(e) {
            e.removeClass('active');
        });
        elem.addClass('active');
        $role.val(elem.attr('data-value'));
        console.log($role.val());
      };
      $top.children('.role-selector').each(function(){
        var $sub;
        $sub = $(this);
        $top.selections.push($sub);
        $sub.click(function(){
            activeSelection($sub);
        });
      });
    }();
    </script>
  </body>
</html>